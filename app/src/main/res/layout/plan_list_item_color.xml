<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/progressBarCompletion"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"


        app:arc_finished_color="@color/colorPrimary"
        app:arc_stroke_width="@dimen/appbar_padding_top"
        app:arc_unfinished_color="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textViewItmref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textViewItmdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/black" />
</LinearLayout>
